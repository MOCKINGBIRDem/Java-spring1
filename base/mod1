public class MultiplesNumbers {

    public static void main(String[] args) {
        int forthree = 0;
        int forfive = 0;
        int total =0;

        for(int i =0; i < 1000 ; i++){
            if(i % 3 == 0){
                forthree += i;
            }else if(i % 5 == 0){
                forfive += i;
            }
        }

        total = forfive + forthree;

        System.out.println(total);
    }
}
